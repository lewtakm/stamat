{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "plugins": [
    "perfectionist"
  ],
  "rules": {
    "react/jsx-sort-props": 2,
    "sort-keys": 2,
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true
      }
    ],
    "perfectionist/sort-objects": [
      "error",
      {
        "type": "alphabetical"
      }
    ],
    "perfectionist/sort-interfaces": [
      "error"
    ]
  },
  "settings": {
    "perfectionist": {
      "type": "line-length",
      "partitionByComment": true
    }
  }
}
